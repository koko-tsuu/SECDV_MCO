<div class="row post-user">
  <!-- Post Proper -->

  <div class="d-flex justify-content-between">
    <h5 class="post-title"><b><a href="/post/{{_id}}">{{{post_title}}}</a></b></h5>
    </div>
      
    <span class="post-info">posted by <a href="/user/{{{username.username}}}">{{{username.username}}}</a> on {{{formatDate post_date}}}</span>
    <p class="post-content pt-2">{{post_content}}</p>
    <div class="d-flex justify-content-between">
      <div class="d-flex">
            {{#each tags}}
          <span class="postcom-tags post-tags-cont"><a href="/tag/{{this.tag_name}}">#{{tag_name}}</a></span>
          {{/each}}
      </div>
        <div class="actions-cont d-flex">
          <div class="share-cont" id="share-btn" onclick="copyLink('https://discusso.onrender.com/post/{{_id}}')">
            <i class="fa-regular fa-share-from-square"></i>
          </div>
          <div class="votes-cont profile-post">
            <i class="fa-regular fa-circle-up upvote-btn"></i>
            <span style="fontWeight:bold; font-size:smaller; margin-right: 0.5vh;" class="upvote-amnt" id="upvote-amnt"><b>{{upvotes.length}}</b></span>
            <span style="font-size:smaller; margin-right: 0.5vh;"><b>|</b></span>
            <i class="fa-regular fa-circle-down downvote-btn"></i>
            <span style="fontWeight:bold; font-size:smaller" class="downvote-amnt" id="downvote-amnt"><b>{{downvotes.length}}</b></span>
          </div>
       <div class="comments-cont" onclick="redirectToPage('/post/{{_id}}')">
                <i class="fa-regular fa-comment-dots"></i>
                <span style="font-size:smaller"><b>{{comments.length}}</b></span>
        </div>
      </div>
    </div>
  </div>