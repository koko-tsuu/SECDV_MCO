    <!-- Link Copy Modal -->
    <div class="modal fade" id="copyLinkModal" tabindex="-1" aria-labelledby="copyLinkModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" style="width: 40vh;">
            <div class="container">
                <div class="modal-content logreg-modal" style="display: flex; align-items: center; text-align: center;">
                    <div class="modal-body">
                        <h1 class="logging-out">link copied successfully</h1>
                        <h4 class="mt-3">share it with anyone!</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>


<div class="row post-comment">

    <!-- Comment Proper -->

    <div class="d-flex justify-content-between">
        <h6 class="comment-title"><b><a href="/post/{{post_commented._id}}">{{{post_commented.post_title}}}</a></b></h6> 
        <div class="d-flex">
            {{#each post_commented.tags}}
            <a href="/tag/{{this.tag_name}}" class="postcom-tags post-tags-cont">#{{this.tag_name}}</a>
            {{/each}}
        </div>
    </div>
    
    <span class="comment-info"><a href="/user/{{{username.username}}}">{{{username.username}}}</a> commented on {{formatDate comment_date}}</span>
    <p class="post-content pt-2">{{{comment_content}}}</p>
    <div class="d-flex justify-content-between">
        <div>{{edit_comment}}</div>
        <div class="actions-cont d-flex">
            <div class="share-cont" id="share-btn" onclick="copyLink('https://discusso.onrender.com/post/{{post_commented._id}}')">
                <i class="fa-regular fa-share-from-square"></i>
            </div>
            <div class="votes-cont profile-post">
                <i class="fa-regular fa-circle-up upvote-btn"></i>
                <span style="fontWeight:bold; font-size:smaller; margin-right: 0.5vh;" class="upvote-amnt" id="upvote-amnt"><b>{{upvotes.length}}</b></span>
                <span style="font-size:smaller; margin-right: 0.5vh;"><b>|</b></span>
                <i class="fa-regular fa-circle-down downvote-btn"></i>
                <span style="fontWeight:bold; font-size:smaller" class="downvote-amnt" id="downvote-amnt"><b>{{downvotes.length}}</b></span>
            </div>
            <div class="comments-cont" onclick="redirectToPage('/post/{{post_commented._id}}')">
                <i class="fa-regular fa-comment-dots"></i>
                <span style="font-size:smaller"><b>Reply</b></span>
            </div>
        </div>
    </div>
</div>